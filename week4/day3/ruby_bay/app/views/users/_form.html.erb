<% if flash[:alert] %>
	<%= flash[:alert] %>
<% end %>

<%= form_for @user do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<div>
		<%= f.submit %>
		<%= link_to "Cancel", users_path %>
	</div>
<% end %>