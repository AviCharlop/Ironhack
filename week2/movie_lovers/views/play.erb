<head>
	<link rel="stylesheet" type="text/css" href="<%= url("movie-game.css") %>">
</head>
<h1><%= @prompt %></h1>
<% @movie_list.each_with_index do |movie,idx| %>
	<% alert = (idx == @winner ? "Yay!" : "Nope") %>
	<img src="<%= movie[:poster] %>" id="<%= idx %>" onClick="alert('<%= alert %>')">
	<% if (idx + 1) % 3 == 0 %>
		<br>
	<% end %>
<% end %>